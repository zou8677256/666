<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b6"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/icon_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:background="@drawable/icon_user" />

    <Button
        android:id="@+id/pswd_btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/et_2"
        android:background="@drawable/icon_password" />
    <Button
        android:id="@+id/pswd_btn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/et_3"
        android:background="@drawable/icon_password" />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/icon_btn"

        android:background="@drawable/bg_username"
        android:drawablePadding="5dp"
        android:hint="用户名"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#607B8B"
        android:textSize="16sp" />

    <EditText
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/et_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#607B8B"
        android:layout_below="@+id/et_1"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:drawablePadding="15dp"
        android:maxLines="1"
        android:hint="密码"
        android:background="@drawable/bg_username"
        />/ android:drawableLeft="@drawable/icon_password"

    />
    <EditText
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/et_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#607B8B"
        android:layout_below="@+id/et_2"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:drawablePadding="15dp"
        android:maxLines="1"
        android:hint="确认密码"
        android:background="@drawable/bg_username"
        />/ android:drawableLeft="@drawable/icon_password"

    />
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_3"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn4"
        android:text="立即注册"
        android:textColor="#fff"

        android:textSize="20sp" />
</RelativeLayout>